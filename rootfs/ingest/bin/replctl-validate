"""
Index table columns using replication service to Qserv

@author  Fabrice Jammes, IN2P3
"""

# -------------------------------
#  Imports of standard modules --
# -------------------------------
import argparse

# ----------------------------
# Imports for other modules --
# ----------------------------
import qserv.validator as validator
import qserv.util as util

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="Validate ingest for a database")
    parser.add_argument("data_url", type=str, help="Input data/metadata URL",
                        action=util.BaseUrlAction)
    parser.add_argument("qserv_url", type=str,
                        help="Qserv query service URL",
                        action=util.BaseUrlAction)
    parser.add_argument("--servers", "-s", type=str, metavar="SERVERS_FILE",
                        help="List of http servers providing input data, in json format")
    parser.add_argument("--verbose", "-v", action="store_true",
                        help="Use debug logging")
    args = parser.parse_args()

    logger = util.get_default_logger(args.verbose)

    validator = validator.Validator(args.data_url, args.qserv_url, args.servers)
    validator.query()
